<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="0dp" android:minWidth="300dp">
    <ImageView android:layout_width="match_parent" android:layout_height="70dp" android:src="@drawable/imglogo" android:scaleType="fitXY"/>
    <TextView android:textStyle="normal|bold|italic" android:textColor="@color/colorAccent" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Do you want to exit app?" style="?android:attr/textAppearanceMedium"/>
    <LinearLayout android:gravity="right" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:weightSum="5">
        <Button android:textColor="@color/colorPrimaryDark" android:background="@color/colorWhite" android:layout_width="0dp" android:layout_height="wrap_content" android:text="  " android:layout_weight="1" style="?android:attr/textAppearanceMedium"/>
        <Button android:textColor="@color/colorPrimaryDark" android:id="@+id/btn_no" android:background="@color/colorWhite" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="2" style="?android:attr/textAppearanceMedium"/>
        <Button android:textColor="@color/colorPrimaryDark" android:id="@+id/btn_yes" android:background="@color/colorWhite" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Exit" android:layout_weight="2" style="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
</LinearLayout>
